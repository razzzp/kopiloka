<main class="container">
  <h1>Add a new cafe</h1>
  <form action="/cafes" method="POST">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" name="cafe[name]" id="name">
    </div>
    <div class="form-group">
      <label for="location">Location:</label>
      <input type="text" class="form-control" name="cafe[location]" id="location">
    </div>
    <div class="form-group">
      <label for="desc">Description:</label>
      <textarea class="form-control" name="cafe[desc]" id="desc"></textarea>
    </div>
    <div class="form-group">
      <label for="avgPrice">Average Price:</label>
      <input type="number" class="form-control" name="cafe[avgPrice]" id="avgPrice" step="any">
    </div>
    <div class="form-group">
      <label for="images">Example file input</label>
      <input type="file" class="form-control-file" id="images">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
  </form>
</main>